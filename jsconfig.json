{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "view/*": [
        "src/view/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}